@code{
    string _imgHost = @"https://github.com/beausmyth1990/ImagesForTesting/blob/master/";
    string _suffix = @"?raw=true";
    IReadOnlyList<NavLinkModel> Links;

    protected override void OnInitialized()
    {
        Links = new List<NavLinkModel> {
            new NavLinkModel("nav-link header", "#header", ""),
            new NavLinkModel("nav-link", "#about-me", "About Me"),
            new NavLinkModel("nav-link", "#skills", "Skills"),
            new NavLinkModel("nav-link", "#experience", "Experience"),
            new NavLinkModel("nav-link", "#education", "Education"),
            new NavLinkModel("nav-link", "#references", "References"),
            new NavLinkModel("nav-link", "#contact", "Contact"),
        };
    }

    string GetFullImgPath(string imgTitle)
    {
        return $"{_imgHost}{imgTitle}{_suffix}";
    }
}