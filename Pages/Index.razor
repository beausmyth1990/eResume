@using BlazorUIComponents.Container;
@using BlazorUIComponents.Img;
@using BlazorUIComponents.nav;
@page "/"

<NavBarResponsive SamePageNav="true" Class="navbar-header" Links="@Links">
    <LinkTemplate>
        <NavLink @onclick:preventDefault class="@context.Class" href="@context.Href"><span>@context.Title</span></NavLink>
    </LinkTemplate>
    <ToggleContent>
        <div id="nav-icon">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>
    </ToggleContent>
</NavBarResponsive>


<!---->
<!-- Header -->
<div class="section" id="header">
    <div class="s-content header">
        <BlazorUIComponents.Img.LazyLoad PlaceHolderSrc="@(_imgHost + "header-img-laptop-coffee-compressed.jpg" + _suffix)" LazyLoadSrc="@(_imgHost + "header-img-laptop-coffee.jpg" + _suffix)">
            <h1 style="margin-bottom: 1em">{ Beau Smyth }</h1>
            <h4>#dev #programmer #livetocode</h4>
        </BlazorUIComponents.Img.LazyLoad>
    </div>
</div>
<!-- About Me -->
<div class="section" id="about-me">
    <BlazorUIComponents.Container.LazyLoad Class="s-content" ClassInView="in-view">
        <h2 class="section-heading">About Me</h2>
        <h5 class="section-subheading">
            <span>Passionate</span>
            <span class="separator">.</span>
            <span>Curious</span>
            <span class="separator">.</span>
            <span>Determined</span>

        </h5>
        <div class="col-30-70">
            <div>
                <BlazorUIComponents.Img.LazyLoad Class="lazy-img-container md-img" PlaceHolderSrc="@GetFullImgPath("me-img-compress.jpg")" LazyLoadSrc="@GetFullImgPath("me-img.jpg")" />
            </div>
            <div>
                <p>Software Developer, specializing in Web Development.</p>

                <p>Enjoys sharing intelligent conversations with like-minded people.</p>

                <p>A goal-driven, self-motivated learner with a keen eye for detail.</p>

                <p>A love for all things programming. Very interested in Web and VR development and wish to look into Data Science in the future.</p>

                <p>Hobbies include running, calesthenics, yoga and VR gaming.</p>
            </div>
        </div>
    </BlazorUIComponents.Container.LazyLoad>
</div>
<!-- Skills -->
<div class="section" id="skills">
    <BlazorUIComponents.Container.LazyLoad Class="s-content" ClassInView="in-view">
        <h2 class="section-heading">Skills</h2>
